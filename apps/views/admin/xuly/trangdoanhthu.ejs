                <div class="row">
                    <div class="row">
                        <form role="form" class="AVAST_PAM_nonloginform" method="POST" action="/admin/doanhthu/loc">
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <input type="Date" class="form-group form-control" name="ngay1" placeholder="Ngày">
                            </div>
                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                <h5 style="text-align:center;">To</h5>
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <input type="Date" class="form-group form-control" name="ngay2" placeholder="Ngày">
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 pt-2">
                                <input type="submit" class="btn btn-warning" value="Lọc">
                            </div>
                             <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                <a class="btn btn-info pull-right" id="print"><i class="fa fa-print"></i> Print</a>
                            
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 pt-3">
                                <a href="/admin/doanhthu/them" class="btn btn-success pull-right">Thêm</a>
                            </div>
                        </form>
                    </div>
                    <div class="main1">
                    <div class="panel panel-default">
                        <!-- <div class="panel-heading">
            Posts
        </div> -->
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <% if(error){%>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                    <%= error %>
                                </div>
                                <%}%>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col"></th>
                                                    <th scope="col">Chi Nhánh 1</th>
                                                    <th scope="col">Chi Nhánh 2</th>
                                                    <th scope="col">Chi Nhánh 3</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(var i = 0; i< doanhthu.length; i++){%>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= doanhthu[i].ngay%>
                                                        </th>
                                                        <td>
                                                            Thu:
                                                            <%= doanhthu[i].thu1%>đ / Chi:
                                                                <%= doanhthu[i].chi1%>đ
                                                        </td>
                                                        <td>
                                                            Thu:
                                                            <%= doanhthu[i].thu2%>đ / Chi:
                                                                <%= doanhthu[i].chi2%>đ
                                                        </td>
                                                        <td>
                                                            Thu:
                                                            <%= doanhthu[i].thu3%>đ / Chi:
                                                                <%= doanhthu[i].chi3%>đ
                                                        </td>
                                                    </tr>
                                                    <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                        </div>
