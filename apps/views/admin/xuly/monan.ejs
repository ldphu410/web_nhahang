                    </li>
                
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
               <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Món Ăn
                        </h1>
                        <ol class="breadcrumb">
                            <li class="fa fa-dashboard"><a href="/admin"> Dashboard</a></li>
                            <li class="active">
                                <i class="fa fa-desktop"></i> Món Ăn
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

               
               <div class="row" style="margin-bottom:10px">
                    <div class="col-sm-12">
                        <a href="/admin/monan/themmonan" class="btn btn-success pull-right">Thêm món ăn</a>
                    </div>
                </div>


              <div class="row">
                    <div class="panel panel-default">
        <!-- <div class="panel-heading">
            Posts
        </div> -->
        <!-- /.panel-heading -->
       <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Giá</th>
                            <th>Giới thiệu</th>
                            <th>Nguyên liệu</th>
                            <th>Bữa</th>
                            <th>Hình ảnh</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       <% if(data && data.cacmonan) {%>
                            <% for(var i = 0; i<data.cacmonan.length; i++) {%>
                                <tr>
                                    <td> <%= data.cacmonan[i].id %> </td>
                                    <td> <%= data.cacmonan[i].ten %> </td>
                                    <td> <%= data.cacmonan[i].gia %> </td>
                                    <td> <%= data.cacmonan[i].gioithieu %> </td>
                                    <td> <%- data.cacmonan[i].nguyenlieu %> </td>
                                    <td> <%= data.cacmonan[i].bua %> </td>

                                    <td> <img src="<%= data.cacmonan[i].hinhanh %>" alt="" class="responsive-img" width="150px" height="150px"> 
                                       
                                    </td>
                                    <td>
                                        <a href="/admin/monan/taianh/<%= data.cacmonan[i].id %>" class="btn btn-warning">Đổi ảnh</a>
                                        <a href="/admin/monan/suamonan/<%= data.cacmonan[i].id %>" class="btn btn-primary">Sửa thông tin</a>
                                        <button class="btn btn-danger monan_xoa" monan_id="<%= data.cacmonan[i].id %>">Xóa</button>
                                    </td>
                                </tr>
                            <%}%>
                       <%}%>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
     </div>
              </div>
               
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
