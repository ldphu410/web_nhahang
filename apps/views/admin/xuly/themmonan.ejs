                        <a href="/admin/header/1"><i class="fa fa-fw fa-table"></i> Header</a>
                    </li>
                    <li>
                        <a href="/admin/slides"><i class="fa fa-fw fa-edit"></i> Slides</a>
                    </li>
                    <li class="active">
                        <a href="/admin/monan"><i class="fa fa-fw fa-desktop"></i> Món Ăn</a>
                    </li>
                    <li>
                        <a href="/admin/chinhanh"><i class="fa fa-fw fa-wrench"></i> Chi Nhánh</a>
                    </li>
                    <li>
                        <a href="/admin/datban"><i class="fa fa-fw fa-table"></i> Đặt Bàn</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Thêm Món Ăn
                        </h1>
                        <ol class="breadcrumb">
                            <li class="fa fa-dashboard"><a href="/admin"> Dashboard</a></li>
                            <li class="active">
                                <i class="fa fa-wrench"></i> Thêm Món Ăn
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="panel panel-default">
                        <!--  <div class="panel-heading">
                Add new Post
            </div> -->
                        <div class="panel-body">
                            <div class="row">
                                <div style="max-width: 650px; margin: auto;">
                                    <h1 class="page-header">Upload Image</h1>
                                    <p class="lead">Select a PNG or JPEG image, having maximum size <span id="max-size"></span> 1000KB.</p>
                                    <%= typeof msg != 'undefined' ? msg : '' %>
                                        <form action="/admin/monan/themmonan/themanh" method="POST" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <input type="file" name="myImage">
                                            </div>
                                            <button class="btn btn-lg btn-primary" id="upload-button" type="submit">Upload image</button>
                                        </form>
                                        <br>
                                        <img src="<%= typeof file != 'undefined' ? file : '' %>" alt="" class="responsive-img" width="200px" height="200px">
                                </div>
                                <div class="col-lg-12 push-4">
                                    <% if(data && data.error){%>
                                        <div id="login-alert" class="alert alert-danger col-sm-12">
                                            <%= data.error %>
                                        </div>
                                        <%}%>
                                            <form role="form" class="AVAST_PAM_nonloginform" method="POST" action="/admin/monan/themmonan">
                                                <div class="form-group">
                                                    <label>Tên</label>
                                                    <input type="text" class="form-control" name="ten" placeholder="Tên">
                                                </div>
                                                <div class="form-group">
                                                    <label>Giá</label>
                                                    <input type="text" class="form-control" name="gia" placeholder="Giá">
                                                </div>
                                                <div class="form-group">
                                                    <label>Giới thiệu</label>
                                                    <input type="text" class="form-control" name="gioithieu" placeholder="Giới thiệu">
                                                </div>
                                                <div class="form-group">
                                                    <label>Nguyên liệu</label>
                                                    <textarea type="text" class="form-control" name="nguyenlieu" placeholder="Nguyên liệu"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label>Bữa</label>
                                                    <input type="text" class="form-control" name="bua" placeholder="Bữa">
                                                </div>
                                                <div class="form-group">
                                                   
                                                    <input type="hidden" class="form-control" name="hinhanh" value="<%= anhmonan%>">
                                                </div>
                                                <input type="submit" name="" value="Add" class="btn btn-warning canhgiua">
                                            </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="/static/theme_admin/js/jquery.js"></script>
