    <script src="/static/theme_admin/js/plugins/morris/raphael.min.js"></script>
    <script src="/static/theme_admin/js/plugins/morris/morris.min.js"></script>
    <script src="/static/theme_admin/js/plugins/morris/morris-data.js"></script>
</body>

</html>